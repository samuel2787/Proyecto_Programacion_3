#include "sistema.h"

int main() {
    int op, fun;
    printf("\n\tMENU\n");
    printf("A que inventario desea ingresar:\nInventario 1 \nInventario 2 \nInventario 3\n");
    scanf(" %d", &op);
    printf("Ingreso al inventario %d correctamente\n", op);

    switch (op) {
        case 1:
        case 2:
        case 3:
            printf("\nQué desea hacer: ");
            printf("\nIngresar producto(1) \nModificar producto(2) \nEliminar producto(3)\n");
            scanf(" %d", &fun);
            switch (fun) {
                case 1:
                    agregar();
                    break;
                case 2:
                    editar();
                    break;
                case 3:
                    // Implementar función de eliminación aquí
                    break;
                default:
                    printf("Opción no válida\n");
                    break;
            }
            break;
        default:
            printf("Inventario no válido\n");
            break;
    }
    return 0;
}
